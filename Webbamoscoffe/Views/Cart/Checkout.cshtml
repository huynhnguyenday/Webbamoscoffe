@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
<style>
    .fa-plus:before {
        padding-left: 1rem;
        content: "\f067";
    }

    .fa-minus:before {
        padding-right: 1rem;
        content: "\f068";
    }

    .table td, .table th {
        text-align: center;
        padding: .75rem;
        vertical-align: middle;
        border-top: 1px solid #e9ecef;
    }
</style>
<div class="container" style="margin-top: 200px;">
    <div class="row">
        <div class="col-md-7">
            <h3>Thông tin thanh toán</h3>
            <form method="post" action="@Url.Action("Checkout", "Cart")">
                <div class="form-group">
                    <label for="fullName">Họ tên:</label>
                    <input type="text" class="form-control" id="fullName" name="fullName" required>
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Số điện thoại:</label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" required>
                </div>
                <div class="form-group">
                    <label for="address">Địa chỉ:</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="paymentMethod">Phương thức thanh toán:</label>
                    <select class="form-control" id="paymentMethod" name="paymentMethod" required>
                        <option value="cod">COD</option>
                        <option value="online">Online</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Xác nhận thanh toán</button>
            </form>
        </div>
        <div class="col-md-5">
            <h3>Thông tin đơn hàng</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-left">@item.Drink.name</td>
                            <td>@item.quantity</td>
                            <td class="item-total" id="total_@item.product_id">@((item.Drink.price * item.quantity).ToString("#,##0 đ"))</td>
                        </tr>
                    }

                    <tr>
                        <td colspan="2" class="text-right" ><strong>Tổng tiền:</strong></td>
                        <td class="text-center">
                            @{
                                // Tính tổng tiền từ tất cả các sản phẩm
                                decimal totalAmount = 0;
                                foreach (var item in Model)
                                {
                                    totalAmount += item.Drink.price * item.quantity;
                                }
                                @totalAmount.ToString("#,##0 đ")
                            }
                        </td>
                    </tr>
                </tbody>

            </table>

        </div>
    </div>
</div>
